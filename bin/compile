#!/usr/bin/env ruby

require 'tempfile'
require 'fileutils'

$stdout.sync = true

def indent msg
  puts "       #{msg}"
end

puts "-----> Found a .oracle.ini"

version = '2.1.2'

S3BUCKET="https://s3.amazonaws.com/chameleon-heroku-assets"
RUBY_212_TGZ="#{S3BUCKET}/ruby-#{version}.tar.gz"
ORACLE_INSTANT_CLIENT_TGZ="#{S3BUCKET}/instantclient_11_2_with_libaio_oci8.tar.gz"
OCI8_TGZ="#{S3BUCKET}/ruby-oci8-2.1.7.tar.gz"

BUILD_DIR="#{ARGV[0]}/oracle_oci8"
OCI8_DIR="#{ARGV[0]}/vendor/oci8"

indent "Making folders..."

VENDOR="#{ARGV[0]}/vendor" 
`mkdir -p #{VENDOR}`
RUBY_HOME = "#{VENDOR}/ruby-#{version}"
ORACLE_INSTANT_CLIENT_DIR="#{ARGV[0]}/vendor/oracle_instantclient"
`mkdir -p #{ORACLE_INSTANT_CLIENT_DIR}`
`mkdir -p #{BUILD_DIR}`
`mkdir -p #{OCI8_DIR}`


indent "Downloading and extracting archives from #{S3BUCKET}..."

result = `curl #{RUBY_212_TGZ} -s -o - | tar -xz -C #{VENDOR} -f - `
unless $?.success?
  indent "Failure while downloading Ruby #{version} archive: #{$?}"
  exit 1
end
indent "About to set path 'export PATH=vendor/ruby-#{version}/bin:$PATH'"
result = `export PATH=vendor/ruby-#{version}/bin:$PATH`
indent `which ruby`

indent "Downloading Oracle Instant Client"
result = `curl #{ORACLE_INSTANT_CLIENT_TGZ} -s -o - | tar -xz -C #{ORACLE_INSTANT_CLIENT_DIR} -f - `

unless $?.success?
  indent "Failure while downloading Oracle instant client archive: #{$?}"
  exit 1
end

indent "Downloading Ruby OCI8"
result = `curl #{OCI8_TGZ} -s -o - | tar -xz -C #{BUILD_DIR} -f - `
unless $?.success?
  indent "Failure while downloading OCI8 archive: #{$?}"
  exit 1
end
indent "Folder after downloading OCI8 tgz is now:"
indent `ls -alh #{VENDOR} 2&>1`

indent "Configuring Ruby OCI8"
result = `cd #{BUILD_DIR} && ls -alh && #{RUBY_HOME}/bin/ruby setup.rb config --prefix=#{RUBY_HOME} && #{RUBY_HOME}/bin/ruby setup.rb install`
unless $?.success?
  indent "Failure while compiling OCI8 archive: #{$?}"
  exit 1
end
indent "Folder #{BUILD_DIR} is now:"
indent `ls -alh #{BUILD_DIR} 2&>1`


indent "Done."
